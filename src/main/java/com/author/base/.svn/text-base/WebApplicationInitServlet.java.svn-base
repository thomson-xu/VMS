package com.zrhis.base;

import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;

import com.zrhis.common.config.ReadConfig;

/**
 * 类功能说明：初始化application变量
 * 
 * <p>Copyright: Copyright © 2012-2013 zrhis.com Inc.</p>
 * <p>Company:新中软科技有限公司</p>
 * @author 王成委
 * @date 2013-11-27 上午11:10:56
 * @version v1.0
 *
 */
public class WebApplicationInitServlet extends HttpServlet {
	private static final Log logger = LogFactory.getLog(WebApplicationInitServlet.class);
	
	private static final long serialVersionUID = 1L;

	@Override
	public void init() throws ServletException {
		
		ServletContext application = this.getServletContext();
		ReadConfig reader = new ReadConfig();
		
		try {
			SystemConfig config = reader.configToBean(SystemConfig.class);
			application.setAttribute("SystemConfigLoad", "success");
			application.setAttribute(Constant.SYS_CONFIG, config);
			logger.info("initialization web application infomation completed!");
		} catch (Exception e) {
			e.printStackTrace();
			application.setAttribute("SystemConfigLoad", "failed");
		}
		super.init();
	}
	
	

}
