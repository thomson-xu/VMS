<?xml version='1.0' encoding='UTF-8'?>

<faces-config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
        version="2.2">
    <application>
        <el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>

        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <validator>
        <validator-id>CountryName</validator-id>
        <validator-class>com.visa.validator.Country</validator-class>
    </validator>
    <validator>
        <validator-id>Uploadfile</validator-id>
        <validator-class>com.visa.validator.UploadFile</validator-class>
    </validator>


    <lifecycle>
        <phase-listener>com.visa.validator.LoginErrorPhaseListener</phase-listener>
    </lifecycle>
</faces-config>