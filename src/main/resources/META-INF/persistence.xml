<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="DBPersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.tms.visa.entity.ConsulateEntity</class>
        <class>com.tms.visa.entity.CountryEntity</class>
        <class>com.tms.visa.entity.EmployeeEntity</class>
        <class>com.tms.visa.entity.MaterialEntity</class>
        <class>com.tms.visa.entity.ProfessionEntity</class>
        <class>com.tms.visa.entity.VisaorderEntity</class>
        <class>com.tms.visa.entity.VisaproductEntity</class>
        <class>com.tms.visa.entity.VisatypeEntity</class>

        <class>com.tms.author.bean.SysResources</class>
        <class>com.tms.author.bean.SysRolesAuthorities</class>
        <class>com.tms.author.bean.SysAuthoritiesResources</class>
        <class>com.tms.author.bean.SysAuthorities</class>
        <class>com.tms.author.bean.SysUser</class>
        <class>com.tms.author.bean.SysUsersRoles</class>
        <class>com.tms.author.bean.SysRoles</class>
        <class>com.tms.author.bean.SysModules</class>
        <class>com.tms.author.bean.SysRolesModules</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <!--property name="hibernate.show_sql" value="true" /-->

            <property name="hibernate.use_sql_comments" value="false"/>

        </properties>
    </persistence-unit>
</persistence>
